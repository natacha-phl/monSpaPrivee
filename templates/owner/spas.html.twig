{% extends 'base.html.twig' %}

{% block body %}

    <a href="{{ path('owner_rooms') }}"> <button class="btn btn-dark">Liste des des salles </button></a>
    <a href="{{ path('owner_add_room_spa') }}"> <button class="btn btn-dark">Ajouter une salle</button></a>
    <a href="{{ path('owner_add_spa') }}"><button class="btn btn-dark">Ajouter un spa</button></a>

    <h1>Liste des spas</h1>

    <table class="table">
        <tr>
            <th>Nom du Spa</th>
            <th>SIRET</th>
            <th>Adresse</th>
            <th>Numéro de téléphone</th>
            <th>Description</th>
            <th>Image</th>
        </tr>


        <tbody>
        {% for ownerSpa in ownerSpas %}
            <tr>
                <td>{{ ownerSpa.name }}</td>
                <td>{{ ownerSpa.siret }}</td>
                <td>{{ ownerSpa.street ~ ' ' ~ ownerSpa.zipCode ~ ' ' ~ ownerSpa.city.name }}</td>
                <td>{{ ownerSpa.phoneNumber }}</td>
                <td>{{ ownerSpa.description }}</td>
{#                <td><img style ="max-height: 50px" src="{{ ownerSpa.image }}" alt="{{ ownerSpa.name }}"/></td>#}
                <td>
                    <form method="get" {#action="{{ path('owner-modification-spa')}}"#}>
                        <input type="hidden" name="ownerSpaId" value="{{ownerSpa.id}}">
                        <button type="submit">Modifier</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



{% endblock %}

