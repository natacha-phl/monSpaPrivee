{% extends 'base.html.twig' %}

{% block body %}
    <section class="h-100 h-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card">
                        <div class="card-body p-4">
                            <div class="row">
                                <div class="col-lg-7">
                                    <div class="d-flex justify-content-between align-items-center mb-4">
                                        <div>
                                            <p class="mb-1">Panier</p>
                                            <p class="mb-0">Vous avez {{ items | length }} élement(s) dans votre
                                                panier</p>
                                        </div>
                                    </div>
                                    {% for item in items %}
                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <div class="d-md-flex justify-content-between">
                                                    <div class="d-flex flex-row align-items-center">
                                                        <div>
                                                            <img
                                                                    src="{{ asset('images/spa/room/' ~ item.room.imageName) }}" alt="{{ item.room.name }}"
                                                                    style="width: 65px;">
                                                        </div>
                                                        <div class="ms-3">
                                                            <h5>{{ item.room.spa.name ~ ' : ' ~ item.room.name }}</h5>

                                                        </div>
                                                    </div>
                                                    <div class="d-flex flex-row align-items-center">
                                                        <div style="width: 100px;">
                                                            {{ item.bookingHours }} heure(s)
                                                        </div>
                                                        <div style="width: 80px;">
                                                            <h5 class="mb-0">{{ (item.room.priceHour * item.bookingHours) }}
                                                                &euro;</h5>
                                                        </div>
                                                        <form class="d-flex flex-row align-items-center" action="{{ path('cart_remove') }}" method="GET">
                                                            <input type="hidden" name="itemLineNumber" value="{{item.lineNumber}}">
                                                            <button type="submit" class="btn btn-danger btn-sm">x</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>

                                <div class="col-lg-5 d-grid align-items-center">

                                    <div class="card bg-body-tertiary text-dark rounded-3">
                                        <div class="card-body">

                                            <div class="d-flex justify-content-between">
                                                <p class="mb-2">Total</p>
                                                <p class="mb-2">{{ total }} &euro;</p>
                                            </div>

                                            <a href="{{ path('payment_stripe') }}"
                                               class="d-flex justify-content-center btn btn-secondary btn-block btn-lg">
                                                <span>Payer&nbsp;</span>
                                                <span>{{ total }}&euro;</span>
                                            </a>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}



