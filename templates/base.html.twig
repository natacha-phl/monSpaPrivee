        {% endblock %}
    </head>
    <header>
        {% if app.user %}
            {% if is_granted('ROLE_ADMIN') %}
                {% include 'components/_navbar_admin.html.twig' %}
                {% elseif ('ROLE_OWNER')%}
                    {% include 'components/_navbar_owner.html.twig' %}
                {% else %}
                {% include 'components/_navbar_owner.html.twig' %}
            {% endif %}

        {% else%}
            {% include 'components/_navbar.html.twig' %}
        {% endif %}





    </header>
    <body>
    {% for label, messages in app.flashes %}{% for message in messages %}<div class=" alert alert-{{ label }}">{{ message }}</div>{% endfor %}{% endfor %}
        {% block body %}{% endblock %}
    </body>
</html>
